{
  // ==================================================
  // UPDATED VS CODE LAUNCH CONFIGURATION
  // ==================================================
  // Updated for simplified Docker Compose structure
  
  "version": "0.2.0",
  "configurations": [
    
    // ==========================================
    // DOCKER DEVELOPMENT CONFIGURATIONS
    // ==========================================
    {
      "name": "üê≥ Debug Django App (Development)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "üêç Docker: Development Up",
      "postDebugTask": "‚õî Docker: Stop Development"
    },

    {
      "name": "üöÄ Debug Django App (Production)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:80",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "üöÄ Docker: Production Up",
      "postDebugTask": "‚õî Docker: Stop Production"
    },

    // ==========================================
    // PYTHON/DJANGO CONFIGURATIONS
    // ==========================================
    {
      "name": "üêç Python/Django in Docker (Development)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "django": true,
      "justMyCode": false,
      "preLaunchTask": "üêç Docker: Development Up"
    },

    {
      "name": "üß™ Python Tests in Docker (Development)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "django": true,
      "justMyCode": false,
      "preLaunchTask": "üêç Docker: Development Up"
    },

    // ==========================================
    // LOCAL DEVELOPMENT (WITHOUT DOCKER)
    // ==========================================
    {
      "name": "üêç Python/Django (Local)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/manage.py",
      "args": ["runserver", "0.0.0.0:8001"],
      "django": true,
      "autoStartBrowser": false,
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "DJANGO_SETTINGS_MODULE": "barodybroject.settings",
        "DEBUG": "True",
        "RUNNING_IN_PRODUCTION": "False",
        "DB_CHOICE": "sqlite"
      }
    },

    {
      "name": "üß™ Python Tests (Local)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/manage.py",
      "args": ["test"],
      "django": true,
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "DJANGO_SETTINGS_MODULE": "barodybroject.settings",
        "DEBUG": "True",
        "RUNNING_IN_PRODUCTION": "False",
        "DB_CHOICE": "sqlite"
      }
    }
  ]
}