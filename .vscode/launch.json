{
  // ==================================================
  // SIMPLIFIED VS CODE LAUNCH CONFIGURATION
  // ==================================================
  // Basic Django development configuration
  
  "version": "0.2.0",
  "configurations": [
    
    // ==========================================
    // DOCKER DEVELOPMENT CONFIGURATIONS
    // ==========================================
    {
      "name": "üê≥ Debug Django App (Docker)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Docker: Compose Up (Detached)",
      "postDebugTask": "Docker: Compose Stop"
    },

    // ==========================================
    // PYTHON/DJANGO CONFIGURATIONS
    // ==========================================
    {
      "name": "üêç Python/Django in Docker (Launch)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/manage.py",
      "args": ["runserver", "0.0.0.0:8000"],
      "django": true,
      "autoStartBrowser": false,
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "DJANGO_SETTINGS_MODULE": "barodybroject.settings",
        "DEBUG": "True"
      }
    },

    {
      "name": "üß™ Python Tests in Docker",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/manage.py",
      "args": ["test"],
      "django": true,
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}