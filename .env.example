# Barodybroject Environment Configuration
# Copy this file to .env and update values as needed
# File: .env.example
# Description: Environment variable template for Barodybroject
# Author: Barodybroject Team
# Version: 1.0.0

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production-use-python-secrets-token

# ==============================================================================
# INSTALLATION WIZARD CONFIGURATION
# ==============================================================================
# Skip installation wizard checks (useful for development)
# Set to 'false' for production to enable installation wizard
SKIP_INSTALLATION_CHECK=true

# Token expiration time in hours (default: 1 hour)
SETUP_TOKEN_EXPIRY_HOURS=2

# Directory for setup data persistence
SETUP_DATA_DIR=/app/setup_data

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# PostgreSQL settings (for Docker and production)
DB_HOST=barodydb
DB_NAME=barodydb
DB_USERNAME=postgres
DB_PASSWORD=postgres
POSTGRES_USER=postgres
POSTGRES_DB=barodydb
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# SQLite (alternative for local development without Docker)
# DATABASE_URL=sqlite:///db.sqlite3

# ==============================================================================
# DJANGO SETTINGS
# ==============================================================================
DJANGO_SETTINGS_MODULE=barodybroject.settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==============================================================================
# DOCKER SERVICE PORTS
# ==============================================================================
DJANGO_DEV_PORT=8000
DJANGO_PROD_PORT=80
DEBUGPY_PORT=5678
JEKYLL_PORT=4002

# ==============================================================================
# AZURE CONFIGURATION (for production deployment)
# ==============================================================================
CONTAINER_APP_NAME=barodybroject
CONTAINER_APP_ENV_DNS_SUFFIX=localhost

# ==============================================================================
# OPENAI API CONFIGURATION
# ==============================================================================
OPENAI_API_KEY=your-openai-api-key-here

# ==============================================================================
# EMAIL SETTINGS
# ==============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production with Django SES:
# EMAIL_BACKEND=django_ses.SESBackend
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_SES_REGION_NAME=us-east-1
# AWS_SES_REGION_ENDPOINT=email.us-east-1.amazonaws.com

# ==============================================================================
# JEKYLL SETTINGS
# ==============================================================================
JEKYLL_ENV=development

# ==============================================================================
# PYTHON SETTINGS
# ==============================================================================
PYTHONUNBUFFERED=1
PYTHONPATH=/app
